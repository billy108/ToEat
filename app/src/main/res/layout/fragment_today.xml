<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.chuangsi.toeat.fragments.TodayFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_item_heigh"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/txt_breakfast"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="@dimen/main_item"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_item_breakfast"
                        android:text="南瓜粥"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_tv_heigh" />

                    <ImageView
                        android:layout_below="@id/main_item_breakfast"
                        android:layout_width="match_parent"
                        android:src="@drawable/left_menu_search_selected"
                        android:layout_height="100dp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/title_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_thick"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_item_heigh"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/txt_lunch"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="@dimen/main_item"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_item_lunch"
                        android:text="焖饭"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_tv_heigh" />

                    <ImageView
                        android:layout_below="@id/main_item_lunch"
                        android:layout_width="match_parent"
                        android:src="@drawable/left_menu_search_selected"
                        android:layout_height="100dp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/title_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_thick"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_item_heigh"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/txt_super"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="@dimen/main_item"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_item_super"
                        android:text="口水鸡"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_tv_heigh" />

                    <ImageView
                        android:layout_below="@id/main_item_super"
                        android:layout_width="match_parent"
                        android:src="@drawable/left_menu_search_selected"
                        android:layout_height="100dp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/title_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_thick"/>


            <ImageView
                android:id="@+id/iv_main_top100"
                android:src="@drawable/left_menu_search_selected"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include android:id="@+id/top_bar" layout="@layout/layout_top_title"/>

    <FrameLayout
        android:id="@+id/layout_main_container"
        android:layout_below="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        >
        <TextView
            android:id="@+id/textView_main_today"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/tv_main_today"
            android:clickable="true"
            />
        <View
            android:background="@color/white"
            android:layout_width="@dimen/border_thick"
            android:layout_height="@dimen/broder_length"
            />

        <TextView
            android:id="@+id/textView_main_food_list"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/tv_main_food_list"
            android:clickable="true"
            />

        <View
            android:background="@color/white"
            android:layout_width="@dimen/border_thick"
            android:layout_height="@dimen/broder_length"
            />

        <TextView
            android:id="@+id/textView_main_shop"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/tv_main_shop"
            android:clickable="true"
            />

        <View
            android:background="@color/white"
            android:layout_width="@dimen/border_thick"
            android:layout_height="@dimen/broder_length"
            />

        <TextView
            android:id="@+id/textView_main_hobby"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/tv_main_hobby"
            android:clickable="true"
            />
    </LinearLayout>
</RelativeLayout>
